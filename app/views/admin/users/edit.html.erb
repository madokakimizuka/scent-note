<h1>ユーザー編集</h1>
<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count "error" %>prohibited this property from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="user_admin">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="user_admin">
    <%= form.label :email %>
    <%= form.text_field :email, id: 'email' %>
  </div>
  <div class="user_admin">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>
  <div class="user_admin">
    <%= form.label :password %>
    <%= form.text_field :password, id: 'password' %>
  </div>
  <div class="user_admin">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, id: 'password_confirmation' %>
  </div>

  <%= form.submit '編集する' %>
<% end %>

<%= link_to 'ユーザー一覧', admin_users_path %>
