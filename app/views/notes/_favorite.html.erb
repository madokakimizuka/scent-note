<% if user_signed_in? %>

  <% unless note.favorite_user(current_user.id).blank? %>
    <%= link_to note_favorite_path(note_id: note.id ,id: note.favorites[0].id), method: :delete, remote: true do %>
      <div class="vertical_favorite">
        <i class="material-icons red-text">favorite</i>
        <span class="red-text">
          <%= note.favorites_count %>
        </span>
      </div>
    <% end %>
  <% else %>
    <%= link_to note_favorites_path(note.id), method: :note, remote: true do %>
      <div class="vertical_favorite">
        <i class="material-icons grey-text text-darken-2">favorite_border</i>
        <span class="grey-text text-darken-2">
          <%= note.favorites_count %>
        </span>
      </div>
    <% end %>
  <% end %>

<% else %>

  <% if note.favorites_count > 0 %>
    <div class="vertical_favorite">
      <i class="material-icons red-text">favorite</i>
      <span class="red-text">
        <%= note.favorites_count %>
      </span>
    </div>
  <% else %>
    <div class="vertical_favorite">
      <i class="material-icons grey-text text-darken-2">favorite_border</i>
      <span class="grey-text text-darken-2">
        <%= note.favorites_count %>
      </span>
    </div>
  <% end %>

<% end %>
